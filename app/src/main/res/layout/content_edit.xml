<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.alexadra.simplan.EditActivity"
    tools:showIn="@layout/activity_edit">

    <GridLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        android:background="@color/lvcolor1">

        <EditText
            android:id="@+id/etTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="9dp"

            android:layout_marginTop="6dp"

            android:background="@drawable/add_text_file"
            android:ellipsize="start"
            android:ems="10"

            android:hint="Title"
            android:inputType="textPersonName"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"

            android:paddingTop="11dp"

            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/textColor"
            android:textColorLink="@color/et"
            android:textSize="@dimen/font_size"

            android:textStyle="normal" />

        <EditText
            android:id="@+id/etNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/note"
            android:inputType="textMultiLine"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:background="@drawable/add_text_file"

            android:textAppearance="?android:attr/textAppearanceMedium"

            android:textStyle="normal"
            android:textSize="@dimen/font_size"
            android:textColor="@color/textColor"

            android:layout_centerVertical="true"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="9dp"

            android:ellipsize="start"

            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="12dp"
            android:paddingBottom="36dp"

            />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_column="0"
            android:layout_row="2">

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="@string/delete"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="0dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:background="@drawable/btn_edit_file"/>

            <Button
                android:id="@+id/btnEdit"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_column="16"
                android:layout_row="0"
                android:text="@string/edit"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="18dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:background="@drawable/btn_edit_file"/>
        </GridLayout>

    </GridLayout>


</android.support.constraint.ConstraintLayout>
